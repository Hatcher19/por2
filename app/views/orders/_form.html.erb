<%= simple_nested_form_for @order do |f| %>
  <%= f.error_notification %>
      

    <div>
      <h4>What type of order is this?</h4>
      <%= f.check_box :order_type %>
    </div>
    <div>
      <h4>Name this order.</h4>
      <%= f.text_field :title %>
    </div>
    <div>
      <h4>Order Due Date</h4>
      <%= f.date_select :due_date %>
    </div>
    <div>
      <h4>What location is being printed?</h4>
      <%= f.check_box :print_location %>
    </div>
    <div>
      <h4>What colors are being printed?</h4>
      <%= f.text_area :print_color %>
    </div>
    <div>
      <h4>Additional Comments:</h4>
      <%= f.text_area :comments %>
    </div>
    <div>
      <div class="form-inputs">
        <h3>Product Information</h3>
          <%= f.fields_for :products do |products_form| %>
            <%= products_form.number_field :quantity, placeholder: "quantity" %>
            <%= products_form.link_to_remove "Remove" %>
          <% end %>
          <p><%= f.link_to_add "Add New Line Item", :products %></p>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
